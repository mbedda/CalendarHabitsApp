<Window x:Class="CalendarHabitsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarHabitsApp"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" ShowInTaskbar="False"
        Title="Calendar Habits" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <ListBox x:Name="DaysList" SelectionMode="Multiple" DisplayMemberPath="Date" SelectedValue="{Binding Path=Checked}" SelectionChanged="DaysList_SelectionChanged"></ListBox>
        </Grid>
    </Grid>
</Window>
